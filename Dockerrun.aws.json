
{
    "AWSEBDockerrunVersion": 2, 
    "containerDefinitions": [
        {
            "name": "client",
            "image": "ronaldcast/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "ronaldcast/multi-server",
            "hostname": "api",
            "essential":false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "ronaldcast/multi-worker",
            "hostname": "worker",
            "essential":false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "ronaldcast/multi-nginx",
            "hostname": "nginx",
            "essential":false,
            "portMapping":[
                {
                    "hostPort": 80,
                    "container": 80
                }
            ],
            "links": ["client","server"],
            "memory": 128
        }

    ]
}